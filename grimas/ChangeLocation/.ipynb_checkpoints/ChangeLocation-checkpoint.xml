<GrimaForm>
    <Title>Grima: Change Item Location</Title>
    <Field
        name="location"
        label="Item Location"
        shortname="l"
        autocomplete="on"
        required="yes"
        persistent="yes"
        placeholder="New Item Location..."
    />
    <Field
        name="location_code"
        label="Item Location Code"
        shortname="c"
        autocomplete="on"
        required="yes"
        persistent="yes"
        placeholder="New Item Location Code..."
    />
    <Field
        name="barcode"
        label="Barcode"
        shortname="b"
        autocomplete="off"
        required="yes"
        placeholder="Barcode of item to modify..."
    />
</GrimaForm>
