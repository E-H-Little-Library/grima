<GrimaForm>
    <Title>Grima: Change Internal Note</Title>
    <Field
        name="number"
        label="Internal Note Number (1, 2, or 3)"
        shortname="i"
        autocomplete="on"
        required="yes"
        persistent="yes"
        placeholder="1, 2, or 3..."
    />
    <Field
        name="note"
        label="Internal Note"
        shortname="n"
        autocomplete="on"
        required="no"
        persistent="yes"
        placeholder="Note to add to item..."
    />
    <Field
        name="barcode"
        label="Barcode"
        shortname="b"
        autocomplete="off"
        required="yes"
        placeholder="Barcode of item to modify..."
    />
</GrimaForm>
